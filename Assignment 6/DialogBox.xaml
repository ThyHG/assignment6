<Window x:Class="Assignment_6.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_6"
        mc:Ignorable="d"
        Title="Are you sure?" Height="170" Width="250">
    <Grid>
        <Button x:Name="OKButton" Content="Ok" HorizontalAlignment="Left" Margin="22,101,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="140,101,0,0" VerticalAlignment="Top" Width="75" IsCancel="true"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="22,19,0,0" TextWrapping="Wrap" Text="Are you sure you want to close the window and discard all data?" VerticalAlignment="Top" Height="64" Width="193" FontSize="14"/>

    </Grid>
</Window>
